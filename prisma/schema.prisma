// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model CourtSpec {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  name                   String   @default("Pro Full Court")
  length                 Int      @default(28000)
  width                  Int      @default(15000)
  centre_circle_radius   Int      @default(1800)
  three_point_radius     Int      @default(6750)
  three_point_line       Int      @default(900)
  length_of_corner       Int      @default(2990)
  restricted_area_length Int      @default(5800)
  restricted_area_width  Int      @default(4900)
  side_border_width      Int      @default(2000)
  line_border_width      Int      @default(50)
  description            String
  created_at             DateTime @default(now())
  updated_at             DateTime @default(now())
  isDeleted              Boolean  @default(false)
}
