# Set the base images version to node 16
FROM node:16-alpine 

#ARG NODE_ENV=production
#ENV NODE_ENV=${NODE_ENV}

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install 

COPY . .

RUN npm run build
#COPY --from=development /usr/src/app/dist ./dist

CMD ["node", "dist/src/main"]

# The server listens at PORT 8080
EXPOSE 8080
